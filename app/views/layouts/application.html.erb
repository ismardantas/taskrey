<!DOCTYPE html>
<html>
<head>
  <title>Taskrey</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="topbar"> 
      <div class="topbar-inner"> 
        <div class="container"> 
          <h3><a href="/">Taskrey</a></h3> 
          <% if current_user %>
            <ul class="nav"> 
              <li><%= link_to "Projects", projects_path %></li>
              <li class="dropdown"><%= link_to "My Projects", "#", :class => "dropdown-toggle" %>

              <ul class="dropdown-menu">
                <% Project.all.each do |p| %>
                  <li><%=link_to p.title, p %></li>
                <% end %>
              </ul>
            </li> 
            <li><%= link_to "Signout", destroy_user_session_path, :method => :delete %></li>


          </ul> 

        <div style="float: right;">
          <form action=""> 
            <input type="text" placeholder="Search for a task..." /> 
          </form> 
        </div>
        <% end %>

      </div> 
    </div> 
  </div> 

  <% flash.each do |name, msg| %>
    <%= content_tag :div, raw("<p><center>" + msg + "</center></p>"), :class => "alert-message #{name}" %>
  <% end %>
  <div align="center">
    <div class="central_container">
      <%= yield %>
    </div>
  </div>
</body>
</html>
